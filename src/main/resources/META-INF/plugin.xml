<idea-plugin>
    <id>intellij-awk.intellij-awk</id>
    <name>AWK Support</name>
    <vendor email="xonixx@gmail.com" url="https://www.linkedin.com/in/gubarkovv/">Volodymyr Gubarkov</vendor>

    <description><![CDATA[
    AWK Programming Language Support.
    More info at <a href="https://github.com/xonixx/intellij-awk">https://github.com/xonixx/intellij-awk</a>.
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends><!--TODO do we need for AWK?-->

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Simple File" implementationClass="intellij_awk.SimpleFileType"
                  fieldName="INSTANCE" language="Simple" extensions="simple"/>
        <lang.parserDefinition language="Simple"
                               implementationClass="intellij_awk.SimpleParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Simple"
                                       implementationClass="intellij_awk.SimpleSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="intellij_awk.SimpleColorSettingsPage"/>

        <annotator language="JAVA" implementationClass="intellij_awk.SimpleAnnotator"/>

        <codeInsight.lineMarkerProvider language="JAVA"
                                        implementationClass="intellij_awk.SimpleLineMarkerProvider"/>
        <completion.contributor language="Simple"
                                implementationClass="intellij_awk.SimpleCompletionContributor"/>
        <psi.referenceContributor implementation="intellij_awk.SimpleReferenceContributor"/>
        <lang.refactoringSupport language="Simple"
                                 implementationClass="intellij_awk.SimpleRefactoringSupportProvider"/>
        <lang.findUsagesProvider language="Simple"
                                 implementationClass="intellij_awk.SimpleFindUsagesProvider"/>
        <lang.foldingBuilder language="JAVA"
                             implementationClass="intellij_awk.SimpleFoldingBuilder"/>
        <gotoSymbolContributor
                implementation="intellij_awk.SimpleChooseByNameContributor"/>/
        <lang.psiStructureViewFactory language="Simple"
                                      implementationClass="intellij_awk.SimpleStructureViewFactory"/>
        <lang.formatter language="Simple"
                        implementationClass="intellij_awk.SimpleFormattingModelBuilder"/>
        <codeStyleSettingsProvider implementation="intellij_awk.SimpleCodeStyleSettingsProvider"/>
        <langCodeStyleSettingsProvider
                implementation="intellij_awk.SimpleLanguageCodeStyleSettingsProvider"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>